{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": ["./src/*"],
      "@/convex/*": ["./convex/*"]
    }
  },
  "include": ["src", "convex", ".expo/types/**/*.ts", "expo-env.d.ts"],
  "exclude": [
    "**/node_modules",
    "./convex/_generated",
    "**/.*/",
    "babel.config.js"
  ]
}
